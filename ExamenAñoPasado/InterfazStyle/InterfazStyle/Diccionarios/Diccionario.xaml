<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InterfazStyle.Diccionarios">

<!--Styles for Login Page-->
    <Style TargetType="Image" x:Key="Image">
        <Setter Property="MaxHeight" Value="100"></Setter>
        <Setter Property="MaxWidth" Value="100"></Setter>
        <Setter Property="Margin" Value="20"></Setter>
        <Setter Property="RelativePanel.AlignHorizontalCenterWithPanel" Value="True"></Setter>
    </Style>

    <Style TargetType="TextBox" x:Key="textPrincipal">
        <Setter Property="RelativePanel.AlignHorizontalCenterWithPanel" Value="True"></Setter>
        <Setter Property="Margin" Value="20"></Setter>
        <Setter Property="MinWidth" Value="250"></Setter>
        <Setter Property="TextAlignment" Value="Justify"></Setter>
        
    </Style>
    
    
    <!--Styles for Main Page-->

    <Style TargetType="TextBlock" x:Key="tituloPivot">
        <Setter Property="FontFamily" Value="Segoe UI"></Setter>
        <Setter Property="FontStyle" Value="Oblique" ></Setter>
        <Setter Property="FontWeight" Value="ExtraBold"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center" ></Setter>
        <Setter Property="FontSize" Value="30"></Setter>
        <Setter Property="Foreground" Value="Teal"></Setter>
    </Style>
    
    
</ResourceDictionary>
